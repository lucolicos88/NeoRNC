{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "checkJs": false,
    "noEmit": true,
    "strict": false,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "moduleResolution": "node"
  },
  "include": [
    "*.js",
    "*.html",
    "types.d.ts"
  ],
  "exclude": [
    "node_modules",
    "archives",
    "tmpclaude-*"
  ]
}
